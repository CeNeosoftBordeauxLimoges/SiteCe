{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block breadcrumbs %}
    Identification utilisateur
{% endblock %}

{% block content %}

    <h1>Identification utilisateur</h1>

    <div id="login">
        <h3>S'identifier : </h3>

        <form action="{{ path("fos_user_security_check") }}" method="post" id="form_login" novalidate>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <hr class="separator" />

            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />

            <hr class="separator" />

            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" class="form-control" />

        {#    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        #}
            <hr class="separator" /><br>

            <div id="textalign">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default" />
            </div>

            <hr class="separator" />
        </form>

        {% if error %}
            <div id="textalign">Erreur lors de l'identification.</div>
        {% endif %}

        {#
            <a href="{{ path('extranet_utilisateur_identifiant_perdu') }}" title="J'ai perdu mon identifiant" class="id_perdu">J'ai perdu mon identifiant</a>
            <a href="{{ path('fos_user_resetting_request') }}" title="J'ai perdu mon mot de passe" class="mdp_perdu">J'ai perdu mon mot de passe</a>
        #}
    </div>
{% endblock content %}
